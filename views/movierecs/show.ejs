
<%- include('../partials/header') %>

<section id="show-page">
  <div>Title: </div>
  <div><%= movierec.title %></div>
  <div>Description: </div>
  <div><%= movierec.listDesc %></div>
  <div>Movies:</div>
  <ul>
    <%- movierec.movierecitem.map(m => 
      `<h2>${m.listnumber}. ${m.title}</h2>
      <h3>Comments</h3>
      <li>${m.description}</li>
      <a href="/movierecitems/${m._id}">DETAILS</a>
      `
    ).join('') %>
  </ul>  
  <form action="/movierecs/<%= movierec._id%>/movierecitems/new">
    <input type="submit" value="Add a movie list item" />
</form>



<%- include('../partials/footer') %>