
<%- include('../partials/header') %>

<section id="show-page">
  <div>Title: </div>
  <div><%= movielists.title %></div>
  <div>Release Year: </div>
  <div><%= movielists.decription %></div>
  <div>movielists.user: </div>
  <div><%= movie.mpaaRating %></div>
  

<form id="add-review-form" method="POST"
  action="/movielists/<%= movieList._id %>/reviews">
  <label>Review:</label>
  <textarea name="content"></textarea>
  <label>List Number:</label>
  <select name="rating">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
    <option value="5">6</option>
    <option value="5">7</option>
    <option value="5">8</option>
    <option value="5">9</option>
    <option value="5">10</option>
  </select>
  <input type="submit" value="Add Movie">
</form>

<% if (movie.reviews.length) { %>
  <table>
    <thead>
      <tr>
      	 <th>Date</th>
        <th>Review</th>
        <th>Rating</th>
      </tr>
    </thead>
    <tbody>
      <% let total = 0 %>
      <% movie.reviews.forEach(function(r) { %>
        <% total += r.rating %>
        <tr>
          <td><%= r.createdAt.toLocaleDateString() %></td>
          <td><%= r.content %></td>
          <td><%= r.rating %></td>
        </tr>
        <% }); %>
        <tr>
          <td colspan="2"></td>
          <td><strong><%= (total / movie.reviews.length).toFixed(1) %></strong></td>
        </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>


<%- include('../partials/footer') %>