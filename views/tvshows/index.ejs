<%- include('../partials/header') %>
<table id="list">
  <thead>
    <tr class="tvheader">
      <th colspan="2">Title</th>
      <th>Genre</th>
      <th>Details</th>
      <th>Streaming Platforms</th>
    </tr>
  </thead>
  <tbody>
    <% if (user) { %>    
      <a href="/tvshows/new" <%- title === 'Add TV Show' ? 'class="active"' : '' %>><button type="submit" class="form">ADD A MOVIE</button></a>  
     <% } else { %>   
    <% } %>
    <% tvshows.forEach(function(t) { %>
      <tr class="tv">
        <td><img src="<%= t.imageLink %>" width="100px"></td>
        <td><%= t.title %></td>
        <td><%= t.genre %></td>
        <td><%= t.whereToWatch %></td>
        <td><a href="/tvshows/<%= t._id %>">DETAILS</a></td>
      </tr>
      <% }); %>
  </tbody>
</table>  
 
