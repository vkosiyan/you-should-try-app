
<%- include('../partials/header') %>
<table>
  <thead>
    <tr>
      <th colspan="2">Title</th>
      <th>List Decription</th>
      <th>Details</th>
    </tr>
  </thead>
  <tbody>
      <% tvshowrecs.forEach(s => { %>
       
    <!-- EJS that will be iterated over using forEach -->
      <tr>
        <td><b><img src="<%= s.imageLink %>" width="150px"></b></td>
        <td><b><%= s.title %></b></td>
        <td><%= s.listDesc %></td>
        <td><a href="/tvshowrecs/<%= s._id %>">DETAILS</a></td>
      </tr>
    <!-- Closing forEach using EJS here -->

    <% }) %> 

  </tbody>
</table>
<br>

<% if (user) { %>    
  <a href='/tvshowrecs/new'>Create a List</a>
<% } else { %>
<% } %>


<%- include('../partials/footer') %>

