<%- include('../partials/header') %>

<form id="new-form" action="/tvshows/<%= tvshow.id %>?_method=PUT" method="POST" autocomplete="off">
  <label>Title:</label>
  <input type="text" name="title" value="<%= tvshow.title %>">
  <label>Release Year:</label>
  <input type="text" name="releaseYear" value="<%= tvshow.releaseYear %>">
  <label>MPAA Rating</label>
  <select name="mpaaRating">
    <option value="G">G</option>
    <option value="PG">PG</option>
    <option value="PG-13">PG-13</option>
    <option value="R">R</option>
  </select>
  <label>TV Show Link:</label>
  <input type="text" name="title" value="<%= tvshow.tvshowLink %>">
  <label>Genre/Genres:</label>
  <input type="text" name="title" value="<%= tvshow.genre %>">
  <label>Where to Watch:</label>
    <input type="text" name="title" value="<%= tvshow.whereToWatch %>">
  <input type="submit" value="Edit TV Show">
</form>

<%- include('../partials/footer') %>