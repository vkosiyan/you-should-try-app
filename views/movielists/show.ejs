
<%- include('../partials/header') %>

<section id="show-page">
  <div>Title: </div>
  <div><%= movielist.title %></div>
  <div>Description: </div>
  <div><%= movielist.listDesc %></div>
  <div>Movies:</div>
  <ul>
    <%- movielist.movielistitem.map(m => 
      `<h2>${m.listnumber}. ${m.movies.title}</h2>
      <li>${m.movies.releaseYear}</li>
      <h3>Comments</h3>
      <li>${m.description}</li>
      <a href="/movielistitems/${m._id}">DETAILS</a>
      `
    ).join('') %>
  </ul>  
  <form action="/movielists/<%= movielist._id%>/movielistitems/new">
    <input type="submit" value="Add a movie list item" />
</form>



<%- include('../partials/footer') %>